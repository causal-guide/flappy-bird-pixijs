{
    "name": "flappy-bird-pixi-v5",
    "version": "1.0.0",
    "description": "flappy bird clone pixi.js v5.0.0",
    "main": "index.js",
    "scripts": {
        "live-server": "live-server --open=./dist",
        "tsc-watcher": "npx watchify --debug -p [ tsify ] ./src/main.ts -o ./dist/index.js",
        "copy-assets": "npx del-cli ./dist/assets && npx cpy ./assets/** ./dist/ --parents",
        "watch": "npm run copy-assets && npx npm-run-all -p tsc-watcher live-server",
        "build": "npm run copy-assets && npx browserify ./src/main.ts -p [ tsify ] > ./dist/index.js && uglifyjs --output ./dist/index.js  --compress --mangle -- ./dist/index.js",
        "prettier-format": "npx prettier ./src/**/*.ts --write",
        "prettier-check": "npx prettier -c ./src/**/*.ts"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "howler": "^2.0.15",
        "is-ios": "^1.0.0",
        "pixi-console": "^0.7.0",
        "pixi-event-resolver": "^1.2.0",
        "pixi-fps": "^1.0.0",
        "pixi.js": "^5.0.0",
        "screenfull": "^3.3.3"
    },
    "devDependencies": {
        "@types/howler": "^2.0.5",
        "@types/screenfull": "^3.3.2",
        "browserify": "^16.2.3",
        "cpy-cli": "^2.0.0",
        "del-cli": "^1.1.0",
        "husky": "^2.2.0",
        "live-server": "^1.2.1",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.17.0",
        "tsify": "^4.0.0",
        "typescript": "^3.4.5",
        "uglify-js": "^3.4.0",
        "watchify": "^3.11.0"
    }
}
